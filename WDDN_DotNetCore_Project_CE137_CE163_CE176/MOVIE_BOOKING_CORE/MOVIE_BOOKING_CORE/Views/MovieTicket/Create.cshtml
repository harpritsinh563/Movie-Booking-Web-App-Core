@model MOVIE_BOOKING_CORE.ViewModels.MovieTicketViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>MovieTicket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MovieName" class="control-label"></label>
                <input asp-for="MovieName" class="form-control" />
                <span asp-validation-for="MovieName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovieDescription" class="control-label"></label>
                <input asp-for="MovieDescription" class="form-control" />
                <span asp-validation-for="MovieDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MoviePoster" class="control-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                    <input asp-for="MoviePoster" class="form-control custom-file-input" />
                    <label asp-for="MoviePoster" class="custom-file-label">Choose Photo</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="SilverPrice" class="control-label"></label>
                <input asp-for="SilverPrice" class="form-control" />
                <span asp-validation-for="SilverPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GoldPrice" class="control-label"></label>
                <input asp-for="GoldPrice" class="form-control" />
                <span asp-validation-for="GoldPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlatinumPrice" class="control-label"></label>
                <input asp-for="PlatinumPrice" class="form-control" />
                <span asp-validation-for="PlatinumPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="startDate" class="control-label"></label>
                <input asp-for="startDate" class="form-control" />
                <span asp-validation-for="startDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            @section Scripts {
                <script>
                    $(document).ready(function () {
                        $('.custom-file-input').on("change", function () {
                            var filename = $(this).val().split("\\").pop();
                            $(this).next('.custom-file-label').html(filename);
                        }
                        );
                    });
                </script>

            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
