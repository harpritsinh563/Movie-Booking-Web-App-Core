@model IEnumerable<MOVIE_BOOKING_CORE.Models.MovieTicket>


@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MovieName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MoviePoster)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SilverPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GoldPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlatinumPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MovieName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MovieDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MoviePoster)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SilverPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GoldPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PlatinumPrice)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
