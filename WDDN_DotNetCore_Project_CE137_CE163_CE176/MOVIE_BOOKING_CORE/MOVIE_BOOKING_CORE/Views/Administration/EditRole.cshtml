@model EditRoleViewModel

@{ 
    ViewBag.Title = "Edit Role"; 
}

<h1>Edit Role</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-success">Update</button>
            <a asp-action="ListRoles" asp-controller="Administration" class="btn btn-warning">Go back</a>
        </div>
    </div>
    <div class="card">
        <div class="card-header">
            <h3>Users in @Model.RoleName Role</h3>
        </div>
        <div class="card-body">
            @if(Model.Users.Any())
            {
                foreach(var user in Model.Users)
                {
                      <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h3>No Users in @Model.RoleName Role</h3>
            }
        </div>
        <div class="card-footer">
            <a asp-action="EditUserInRole" asp-controller="Administration" asp-route-roleId="@Model.Id" class="btn btn-warning">Add/Remove Users</a>
        </div>
    </div>
</form>