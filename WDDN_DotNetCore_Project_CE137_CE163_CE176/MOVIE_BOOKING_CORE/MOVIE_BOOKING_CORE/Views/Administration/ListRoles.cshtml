@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "List Roles";
}

<h1>All Roles</h1>

@if (Model.Any())
{
    <a asp-action="CreateRole" asp-controller="Administration" class="btn btn-primary mb-3">
        Create Role
    </a>
    foreach (var role in Model)
    {

        <div class="card mb-3">
            <div class="card-body">
                <h3 class="card-title">@role.Name</h3>
            </div>
            <div class="card-footer">
                <a asp-action="EditRole" asp-controller="Administration" asp-route-id="@role.Id" class="btn btn-warning">Edit</a>
                <a class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No Roles Found
        </div>
        <div class="card-body">
            <a asp-action="CreateRole" asp-controller="Administration" class="btn btn-primary">
                Create Role
            </a>
        </div>
    </div>
}
